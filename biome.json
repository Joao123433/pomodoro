{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "off"
      }
		}
	},
	"formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single", 
      "lineWidth": 120 
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  }
}